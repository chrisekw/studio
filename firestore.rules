rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the requesting user has an admin role.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /users/{userId} {
      // Users can read and update their own profile.
      allow read, write: if request.auth.uid == userId;
      
      // Admins can get or delete any user's profile document.
      allow get, delete: if isAdmin();
    }

    // Admins can list all users for the user management page.
    match /users/{document=**} {
      allow list: if isAdmin();
    }
    
    // Rules for the 'savedLeads' subcollection.
    match /users/{userId}/savedLeads/{leadId} {
      // Users can manage their own saved leads.
      allow read, write, delete: if request.auth.uid == userId;
    }
  }
}
