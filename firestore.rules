
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user has the 'isAdmin' flag.
    function isAdmin() {
      // Check the user's document in Firestore to see if they are an admin.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /users/{userId} {
      // A user can read and write to their own profile document.
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // An admin can read or delete any individual user's profile.
      allow get, delete: if request.auth != null && isAdmin();
    }

    match /users/{document=**} {
        // An admin can list the users collection to populate the admin dashboard.
        allow list: if request.auth != null && isAdmin();
    }
    
    // Rules for the 'savedLeads' subcollection within each user's document.
    match /users/{userId}/savedLeads/{leadId} {
      // A user can fully manage (create, read, update, delete) their own saved leads.
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
