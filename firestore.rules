rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for admin role
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.isAdmin == true;
    }

    match /users/{userId} {
      // Users can read and write to their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Admins can read any user document
      allow get: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Admins can list all users
    match /users {
      allow list: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Rules for savedLeads subcollection
    match /users/{userId}/savedLeads/{leadId} {
        // Users can manage their own saved leads
        allow read, write, delete, list: if request.auth != null && request.auth.uid == userId;
    }
  }
}
